<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head'); %>
    <title>Car Details</title>
    <style>
        .navbar-nav {
            flex-direction: row;
            align-items: center;
        }
        
        .navbar-collapse {
            justify-content: space-between;
        }
        
        #logoutBtn {
            text-decoration: none;
            color: white;
            background-color: #28a745;
            padding: 6px 12px;
            border-radius: 4px;
            transition: box-shadow 0.3s ease-in-out;
        }
        
        #logoutBtn:hover {
            box-shadow: 0 0 10px rgba(40, 167, 69, 0.8);
        }
        
        body {
            background-color: #1a1a1a;
            color: #ffffff;
        }
        
        .container {
            width: 25%;
            margin-top: 100px;
        }
        
        .btn-danger {
            background-color: red;
        }
        
        .form-control {
            border-radius: 25px;
            background-color: #ffffff;
            color: #343a40;
        }
        
        .navbar-form {
            margin-top: 15px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }
        
        .navbar-form .form-group {
            margin-right: 10px;
        }
        
        .footer {
            background-color: #343a40;
            padding: 20px 0;
            color: #ffffff;
        }
        
        .footer p {
            margin: 0;
            text-align: center;
        }
        
        .footer h3 {
            margin: 10px 0;
            text-align: center;
        }
        
        .footer form {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }
        
        .footer input[type="email"] {
            border-radius: 25px;
            padding: 10px;
        }
        
        .footer button {
            margin-left: 10px;
            border-radius: 25px;
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <form action="/auth/logout" method="post">
                            <button type="submit" id="logoutBtn" class="btn btn-primary rounded-pill">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <h1>Welcome</h1>

    <ul>
        <% carOwners.forEach(function(carOwner) { %>
        <li class="car-owner">Username: <%= carOwner.username %></li>
        <li class="car-owner">Name: <%= carOwner.name %></li>
        <li class="car-owner">Sponsors: <%= carOwner.sponsors %></li>
        <% }); %>

        <% cars.forEach(function(car) { %>
        <li class="car-details">Make: <%= car.make %></li>
        <li class="car-details">Model: <%= car.model %></li>
        <li class="car-details">Year: <%= car.year %></li>
        <li class="car-details">Type: <%= car.type %></li>
        <li class="car-details">ownerId: <%= car.ownerId %></li>
        <!-- Rest of the code... -->
        <form action="/owner/update_car_by/<%= car.id %>" method="post">
            <!-- Update Form -->
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label for="make" class="form-label">Make</label>
                        <input type="text" name="make" value="<%= car.make %>" class="form-control" id="make" placeholder="Make" required>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label for="model" class="form-label">Model</label>
                        <input type="text" name="model" value="<%= car.model %>" class="form-control" id="model" placeholder="Model" required>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label for="year" class="form-label">Year</label>
                        <input type="text" name="year" value="<%= car.year %>" class="form-control" id="year" placeholder="Year" required>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label for="type" class="form-label">Type</label>
                        <input type="text" name="type" value="<%= car.type %>" class="form-control" id="type" placeholder="Type" required>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label for="ownerId" class="form-label">Owner ID</label>
                        <input type="text" name="ownerId" value="<%= car.ownerId %>" class="form-control" id="ownerId" placeholder="Owner ID" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
        
        <form class="form-inline navbar-form" action="/owner/delete_car_by/<%= car.id %>" method="post">
            <!-- Delete Button -->
            <button type="submit" class="btn btn-danger">Delete Car</button>
        </form>
        
        <form class="form-inline navbar-form" action="/owner/create_car_by/<%= car.id %>" method="post">
            <!-- Create Button -->
            <button type="submit" class="btn btn-success">Create Car</button>
        </form>
               
       
        <br>
        <% }); %>
    </ul>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
