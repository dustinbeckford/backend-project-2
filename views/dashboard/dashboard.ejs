    <h1>Car Details</h1>
    
    
<ul>
  <% carOwners.forEach(function(carOwner) { %>
    <li>Username: <%= carOwner.username %></li>
    <li>Name: <%= carOwner.name %></li>
    <li>Sponsors: <%= carOwner.sponsors %></li>
  <% }); %>

  <% cars.forEach(function(car) { %>
    <li>Make: <%= car.make %></li>
    <li>Model: <%= car.model %></li>
    <li>Year: <%= car.year %></li>
    <li>Type: <%= car.type %></li>
    <li>ownerId: <%= car.ownerId %></li>
    <form action="/owner/update_car_by/<%= car.id %>" method="post">
      <input type="text" name="make" value="<%= car.make %>" placeholder="Make" required>
      <input type="text" name="model" value="<%= car.model %>" placeholder="Model" required>
      <input type="text" name="year" value="<%= car.year %>" placeholder="Year" required>
      <input type="text" name="type" value="<%= car.type %>" placeholder="Type" required>
      <input type="text" name="ownerId" value="<%= car.ownerId %>" placeholder="Owner ID" required>
      <button type="submit" id="UpdateButton" class="btn btn-primary rounded-pill">Update</button>
    </form>    
    <form class="form-inline navbar-form" action="/owner/delete_car_by/<%= car.id %>" method="post">
      <input class="class=btn btn-danger rounded-pill" type="submit" value="Delete Car" />
    </form>
    <br>
  <% }); %>
  

</ul>
